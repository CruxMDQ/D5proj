<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/attribute_setting_row_height"
              android:baselineAligned="false"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/txtAttributeName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="Sample attribute"/>

    <TextView
        android:id="@+id/txtAttributeRoll"
        style="@style/statNumberEditableXXXL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="18"/>

    <TextView
        android:id="@+id/txtAttributeBonus"
        style="@style/statNumberBonus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtAttributeTotal"
        style="@style/statNumberEditableXXXL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/padEditStats"
        android:layout_width="@dimen/attribute_setting_buttonpad"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnIncreaseValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:text="@string/btnIncrease"/>

        <Button
            android:id="@+id/btnDecreaseValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:text="@string/btnDecrease"/>

    </LinearLayout>

</LinearLayout>