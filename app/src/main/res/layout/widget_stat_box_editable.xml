        style="@style/statNumberEditableL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="18"/>

    <TextView
        android:id="@+id/btnDecreaseValue"
        style="@style/statModifierButtons"
        android:textColor="@android:color/holo_red_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="@string/btnDecrease"/>
    <!--android:background="@android:color/holo_red_light"-->

    <TextView
        android:id="@+id/txtAttributeBonus"
        style="@style/statNumberBonusM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtAttributeTotal"
        style="@style/statNumberEditableL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="invisible"/>

